<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_task_model_form" model="ir.actions.act_window">
        <field name="name">Create Task</field>
        <field name="res_model">task.model</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <record id="tree_task_model_list" model="ir.ui.view">
        <field name="name">task.model.list</field>
        <field name="model">task.model</field>
        <field name="arch" type="xml">
            <tree string="Tasks" create="false" delete="true" editable="bottom">
                <field name="name"/>
                <field name="production_date"/>
                <field name="color_badge" widget="html"/>
                <field name="weight"/>
                <field name="create_uid" column_invisible="True"/>
                <button name="button_register" string="button" type="object"
                        groups="task.group_task_creator_edit_button_own"
                        invisible="create_uid != uid"/>
                <button name="button_register" string="button" type="object"
                        groups="task.group_task_button_all_edit_own,task.group_task_full_access"/>
            </tree>
        </field>
    </record>

    <record id="tree_task_model_form" model="ir.ui.view">
        <field name="name">task.model.form</field>
        <field name="model">task.model</field>
        <field name="arch" type="xml">
            <form string="Task">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="production_date"/>
                        <field name="color"/>
                        <field name="weight"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_task_model" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">task.model</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="tree_task_model_list"/>
    </record>

    <menuitem id="menu_task_root" name="Tasks"/>
    <menuitem id="menu_task_model" name="Task entities"
              parent="menu_task_root" action="action_task_model"/>
    <menuitem id="menu_task_model_create" name="Create entity"
              parent="menu_task_root" action="action_task_model_form"/>
</odoo>
